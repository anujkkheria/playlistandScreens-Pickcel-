{
  "info": {
    "name": "SCPL Backend",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "1.0.0",
    "description": "Postman collection for SCPL backend (Express + MongoDB)"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login (issue access + httpOnly refresh cookie)",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{email}}\",\n  \"password\": \"{{password}}\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('status 200', function () { pm.response.to.have.status(200); });",
                  "const json = pm.response.json();",
                  "pm.test('has accessToken', function () { pm.expect(json).to.have.property('accessToken'); });",
                  "pm.environment.set('accessToken', json.accessToken);",
                  "pm.test('refresh cookie set', function () { pm.expect(pm.cookies.has('refreshToken')).to.be.true; });"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Refresh (rotate refresh, new access)",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": {
              "raw": "{{baseUrl}}/auth/refresh",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "refresh"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('status 200', function () { pm.response.to.have.status(200); });",
                  "const json = pm.response.json();",
                  "pm.test('has accessToken', function () { pm.expect(json).to.have.property('accessToken'); });",
                  "pm.environment.set('accessToken', json.accessToken);",
                  "pm.test('refresh cookie updated', function () { pm.expect(pm.cookies.has('refreshToken')).to.be.true; });"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{baseUrl}}/auth/logout",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "logout"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('status 204', function () { pm.response.to.have.status(204); });"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Revoke All Tokens",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{baseUrl}}/auth/revoke-all",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "revoke-all"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('status 200', function () { pm.response.to.have.status(200); });",
                  "pm.test('message present', function () { pm.expect(pm.response.json()).to.have.property('message'); });"
                ],
                "type": "text/javascript"
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Screens",
      "item": [
        {
          "name": "List Screens",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/screens?search=&page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["screens"],
              "query": [
                { "key": "search", "value": "" },
                { "key": "page", "value": "1" },
                { "key": "limit", "value": "10" }
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('status 200', function () { pm.response.to.have.status(200); });",
                  "const json = pm.response.json();",
                  "pm.test('items array', function () { pm.expect(json.items).to.be.an('array'); });",
                  "if (json.items && json.items.length) { pm.environment.set('screenId', json.items[0]._id); }"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Toggle First Screen isActive",
          "request": {
            "method": "PUT",
            "url": {
              "raw": "{{baseUrl}}/screens/{{screenId}}",
              "host": ["{{baseUrl}}"],
              "path": ["screens", "{{screenId}}"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('status 200', function () { pm.response.to.have.status(200); });",
                  "const json = pm.response.json();",
                  "pm.test('has isActive', function () { pm.expect(json).to.have.property('isActive'); });"
                ],
                "type": "text/javascript"
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Playlists",
      "item": [
        {
          "name": "List Playlists",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/playlists?search=&page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["playlists"],
              "query": [
                { "key": "search", "value": "" },
                { "key": "page", "value": "1" },
                { "key": "limit", "value": "10" }
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('status 200', function () { pm.response.to.have.status(200); });",
                  "const json = pm.response.json();",
                  "pm.test('items array', function () { pm.expect(json.items).to.be.an('array'); });"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Create Playlist",
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "exec": [
                  "const rand = Math.random().toString(36).slice(2,8);",
                  "pm.environment.set('playlistName', `Demo ${rand}`);"
                ],
                "type": "text/javascript"
              }
            },
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('status 201', function () { pm.response.to.have.status(201); });",
                  "const json = pm.response.json();",
                  "pm.test('has _id and itemCount', function () { pm.expect(json).to.have.property('_id'); pm.expect(json).to.have.property('itemCount'); });"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": {
              "raw": "{{baseUrl}}/playlists",
              "host": ["{{baseUrl}}"],
              "path": ["playlists"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"{{playlistName}}\",\n  \"itemUrls\": [\n    \"https://example.com/one.jpg\",\n    \"https://example.com/two.png\"\n  ]\n}"
            }
          }
        }
      ]
    }
  ],
  "auth": {
    "type": "bearer",
    "bearer": [{ "key": "token", "value": "{{accessToken}}", "type": "string" }]
  },
  "event": [
    {
      "listen": "prerequest",
      "script": { "exec": [""], "type": "text/javascript" }
    },
    {
      "listen": "test",
      "script": { "exec": [""], "type": "text/javascript" }
    }
  ]
}
